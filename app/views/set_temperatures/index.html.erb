<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <h1>Input your temperature thresholds to define 'Cold', 'Warm' and 'Hot'</h1>
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: set_temperatures_path, method: 'put', local: true) do %>
          <div class="form-group">
            <%= label_tag :max_cold_temp, 'Maximum cold temperature (°C)'%>
            <%= text_field_tag :max_cold_temp, nil, placeholder: 'Eg. 10', class: 'form-control' %>
            <%= label_tag :min_cold_temp, 'Minimum hit Temperature (°C)' %>
            <%= text_field_tag :min_hot_temp, nil, placeholder: 'Eg. 20', class: 'form-control' %>
          </div>
          <%= button_tag 'Submit', class: 'btn btn-success btn-block' %>
          <% end %>
      </div>
      <br>
    </div>
    <%= link_to 'Return to forecast', root_path %>
  </div>
</div>
