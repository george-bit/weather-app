<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <h1>Input your postcode below for todayâ€™s temperature forecast</h1>
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: forecast_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= text_field_tag :postcode, nil, placeholder: 'Eg. RH2 0PY', class: 'form-control' %>
          </div>
          <%= button_tag 'Submit', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
      <br>
      <% if flash[:invalid] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% elsif flash[:cold] %>
        <div class="alert alert-primary"><%= flash[:cold] %></div>
      <% elsif flash[:warm] %>
        <div class="alert alert-info"><%= flash[:warm] %></div>
      <% elsif flash[:hot] %>
        <div class="alert alert-danger"><%= flash[:hot] %></div>
      <% end %>
    </div>
    <%= link_to 'Click here to set default temperatures', set_temperatures_path %>
  </div>
</div>
